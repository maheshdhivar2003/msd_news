  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - MSD News Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
   <link rel="stylesheet" href="admin.css">
</head>
<body>
  
  <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="admin-logo">MSD</div>
            <div>
                <div class="admin-title">MSD News Admin</div>
                <div class="admin-subtitle">Control Panel</div>
            </div>
        </div>
        
        <div class="sidebar-menu">
            <div class="menu-title">Main</div>
            <ul class="menu-list">
                <li class="menu-item">
                    <a href="admin/" class="menu-link active">
                        <div class="menu-icon"><i class="fas fa-tachometer-alt"></i></div>
                        <div class="menu-text">Dashboard</div>
                    </a>
                </li>

                <li class="menu-item">
                    <a href="/admin/about_company" class="menu-link">
                        <div class="menu-icon"><i class="fas fa-folder"></i></div>
                        <div class="menu-text">About Company</div>
                    </a>
                </li>
                
                <li class="menu-item">
                    <a href="#" class="menu-link">
                        <div class="menu-icon"><i class="fas fa-newspaper"></i></div>
                        <div class="menu-text">Articles</div>
                        <span class="menu-badge">24</span>
                    </a>
                </li>
               
                <li class="menu-item">
                    <a href="/admin" class="menu-link">
                        <div class="menu-icon"><i class="fas fa-sign-out-alt"></i></div>
                        <div class="menu-text">Logout</div>
                    </a>
                </li>
            </ul>
        </div>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">Dashboard</h1>
            </div>
            
            <div class="topbar-right">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search admin...">
                </div>
                
                <div class="admin-controls">
                    <button class="theme-toggle" id="themeToggle">
                        <i class="fas fa-moon"></i>
                    </button>
                    
                    <button class="notifications">
                        <i class="fas fa-bell"></i>
                        <span class="notifications-badge">5</span>
                    </button>
                    
                    <button class="admin-profile">
                        <div class="profile-image">
                            <img src="/msd.png" alt="Admin">
                        </div>
                        <div class="profile-name"><b>MSD News</b></div>
                    </button>
                </div>
            </div>
        </header>   